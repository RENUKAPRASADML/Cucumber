pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/renukaprasad07111999/Cucumber.git'
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    if (isUnix()) {
                        // Unix-based systems: Use nohup
                        sh '''
                        nohup mvn clean test -Dtest=src/test/java/runner/TestRunner.java &
                        '''
                    } else {
                        // Windows-based systems: Run without nohup
                        bat '''
                        mvn clean test -Dtest=src/test/java/runner/TestRunner.java
                        '''
                    }
                }
            }
        }
    }

    post {
        always {
           // junit '**/target/surefire-reports/*.xml'
            echo "Build completed"
        }
    }
}
